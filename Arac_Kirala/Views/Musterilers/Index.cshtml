@model IEnumerable<Arac_Kirala.Models.Musteriler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MusterAd)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CepTel)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Adres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusteriKul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MusteriSifre)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MusterAd)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CepTel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Adres)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MusteriKul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MusteriSifre)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MusteriId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MusteriId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MusteriId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
