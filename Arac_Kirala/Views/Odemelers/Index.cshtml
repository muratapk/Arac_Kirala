@model IEnumerable<Arac_Kirala.Models.Odemeler>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.MusteriId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AracId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rezervasyon)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.MusteriId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AracId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rezervasyon.RezervasyonId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.OdemeId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.OdemeId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.OdemeId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
