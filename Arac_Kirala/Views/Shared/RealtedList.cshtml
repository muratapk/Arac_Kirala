@model List<Arac_Kirala.Models.Araclar>

<section class="ftco-section ftco-no-pt">
	<div class="container">
		<div class="row justify-content-center">
			<div class="col-md-12 heading-section text-center ftco-animate mb-5">
				<span class="subheading">Seçilen Arabalar</span>
				<h2 class="mb-2">Benzer Arabalar</h2>
			</div>
		</div>
		<div class="row">
			@foreach (var item in ViewBag.Markalar)
			{
				<div class="col-md-4">
					<div class="car-wrap rounded ftco-animate">
					<div class="img rounded d-flex align-items-end" style="background-image: url(Arac_Resim/@item.Resim);">
					</div>
					<div class="text">
						<h2 class="mb-0"><a href="car-single.html">@item.AracName</a></h2>
						<div class="d-flex mb-3">
							<span class="cat">@item.MarkaId</span>
							<p class="price ml-auto">@item.Depozito <span>/day</span></p>
						</div>
						<p class="d-flex mb-0 d-block"><a href="#" class="btn btn-primary py-2 mr-1">Sepette Ekle</a> <a asp-controller="Home" asp-action="Details" asp-asp-route-itemid="@item.AracId" class="btn btn-secondary py-2 ml-1">Detay</a></p>
					</div>
				</div>
			</div>
			}
		</div>
	</div>
</section>